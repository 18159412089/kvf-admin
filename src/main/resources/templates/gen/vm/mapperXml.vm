<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kalvin.kvf.mapper.${config.moduleName}.${config.firstCapFunName}Mapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.kalvin.kvf.entity.${config.moduleName}.${config.firstCapFunName}">
        #foreach($column in $config.allColumns)
        #if($column.columnName == $config.primaryKey)
        <id column="$column.columnName" property="$column.columnNameCamelCase" />
        #else
        <result column="$column.columnName" property="$column.columnNameCamelCase" />
        #end
        #end
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        #foreach($column in $config.allColumns) #if($foreach.count > 1),#end $column.columnName #end
    </sql>

    <select id="select${config.firstCapFunName}List" resultType="com.kalvin.kvf.entity.${config.moduleName}.${config.firstCapFunName}">
        select <include refid="Base_Column_List" /> from $config.tableName
        <trim prefix="where" prefixOverrides="and">
            #foreach($column in $config.allColumns)
            #if($column.columnName != $config.primaryKey)
            #set($valExp = ${config.funName} + '.' + $column.columnNameCamelCase)
            #if($column.dataType == 'varchar' || $column.dataType == 'char')
            <if test="$valExp != null and $valExp != ''">
                and $column.columnName like concat(#{$valExp, "%")
            </if>
            #else
            <if test="$valExp != null">
                and $column.columnName = #{$valExp}
            </if>
            #end
            #end
            #end
        </trim>
##        order by sort asc
    </select>

</mapper>
